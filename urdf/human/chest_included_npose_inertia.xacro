<?xml version="1.0" ?>
<robot name="human_upper" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <gazebo>
    <static>false</static>
  </gazebo>

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  
  
  <xacro:property name="l_neck" value="0.053" />
  <xacro:property name="head" value="0.212-${neck}" />
  <xacro:property name="l_upper_trunk" value="0.410" />
  <xacro:property name="l_lower_trunk" value="0.135" />
  <xacro:property name="l_upper_arm" value="0.65" />
  <xacro:property name="l_forearm" value="0.299" />
  <xacro:property name="l_hand" value="0.203" />
  <xacro:property name="l_thigh" value="0.449" />
  <xacro:property name="l_shank" value="0.429" />
  <xacro:property name="l_foot" value="0.06" />
  <xacro:property name="whole_body" value="1.7268" />

  <xacro:property name="w_neck" value="${l_neck/5}" />
  <xacro:property name="w_upper_trunk" value="${l_upper_trunk/5}" />
  <xacro:property name="w_lower_trunk" value="${l_lower_trunk/2}" />
  <xacro:property name="w_upper_arm" value="${l_upper_arm/3}" />
  <xacro:property name="w_forearm" value="${l_forearm/3}" />
  <xacro:property name="w_hand" value="${l_hand/3}" />
  <xacro:property name="w_thigh" value="${l_thigh/3}" />
  <xacro:property name="w_shank" value="${l_shank/3}" />
  <xacro:property name="w_foot" value="${l_foot/3}" />

  <xacro:property name="cm_head" value="0.361" />
  <xacro:property name="cm_upper_trunk" value="0.497" />
  <xacro:property name="cm_lower_trunk" value="0.518" />
  <xacro:property name="cm_upper_arm" value="0.427" />
  <xacro:property name="cm_forearm" value="0.417" />
  <xacro:property name="cm_hand" value="0.361" />
  <xacro:property name="cm_thigh" value="0.430" />
  <xacro:property name="cm_shank" value="0.443" />
  <xacro:property name="cm_foot" value="0.436" />

  <xacro:property name="d_head" value="1085.1" />
  <xacro:property name="d_upper_trunk" value="1068.6" />
  <xacro:property name="d_lower_trunk" value="1068.6" />
  <xacro:property name="d_upper_arm" value="1088.0" />
  <xacro:property name="d_forearm" value="1108.6" />
  <xacro:property name="d_hand" value="1112.6" />
  <xacro:property name="d_thigh" value="1068.6" />
  <xacro:property name="d_shank" value="1100.2" />
  <xacro:property name="d_foot" value="1089.3" />

  <xacro:include filename="spherical.urdf.xacro"/>
  <xacro:include filename="arm.urdf.xacro"/>
  <create/>
  

  <link name="world"/>
  <joint name="world_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin rpy="0.0 0.0 0.0" xyz="0 0 0"/>
  </joint>

  <link name="base_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="1 1 1"/>
      </geometry>
    </visual>
  </link>

  <joint name="base_link__link_01" type="revolute">
    <axis xyz="1 0 0" rpy="0 0 0"/> 
    <limit effort="1000.0" lower="-3.14" upper="3.14" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0 0 0.5"/>  
    <parent link="base_link"/>
    <child link="link_01"/>
  </joint>


  <!-- <joint name="base_link__link_01" type="fixed">
    <parent link="base_link"/>
    <child link="link_01"/>
    <origin rpy="0.0 0.0 0.0" xyz="0 0 0"/>
  </joint> -->


  <link name="link_01">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <geometry>
        <cylinder radius="0.35" length="0.4"/>
      </geometry>
    </visual>
  </link>


</robot>
